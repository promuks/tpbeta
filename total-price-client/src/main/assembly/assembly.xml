<assembly>
     <id>bin</id>
     <!-- Generates a tar package containing the needed files -->
     <formats>
         <format>tar</format>
     </formats>
 	 <includeBaseDirectory>false</includeBaseDirectory>
 
    <fileSets>
         <!--
            Adds startup scripts to the root directory of zip package. The startup
            scripts are located to src/main/scripts directory as stated by Maven
            conventions.
        -->
         <fileSet>
             <directory>${project.build.scriptSourceDirectory}</directory>
             <outputDirectory></outputDirectory>
              <lineEnding>unix</lineEnding>
             <fileMode>0755</fileMode>
         </fileSet>
      
         <!-- adds jar package to the package -->
         <fileSet>
             <directory>${project.build.directory}</directory>
             <outputDirectory>/total-price-client</outputDirectory>
               <includes>
                 <include>*.jar</include>
                 <include>version.properties</include>
             </includes>
            
         </fileSet>
     </fileSets>
 </assembly>